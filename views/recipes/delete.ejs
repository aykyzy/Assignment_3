<%- include('../partials/main_nav.ejs') %>
<!--Content for deleting a recipe-->
  <h1><%= title %></h1>
  <div class="alert alert-warning">
    <p><strong>Are you sure you want to delete this recipe?</strong></p>
    <ul class="mb-3">
      <li><strong>Title:</strong> <%= recipe.title %></li>
      <% if (recipe.tags && recipe.tags.length) { %>
        <li><strong>Tags:</strong> <%= recipe.tags.join(', ') %></li>
      <% } %>
    </ul>

    <form method="POST" action="/recipes/<%= recipe._id %>/delete" class="d-inline">
      <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash"></i> Yes, delete
      </button>
    </form>
    <a href="/recipes" class="btn btn-secondary">
      <i class="fas fa-undo"></i> Cancel
    </a>
  </div>

