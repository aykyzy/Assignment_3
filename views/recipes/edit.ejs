<%- include('../partials/header.ejs') %>
<%- include('../partials/main_nav.ejs') %> 
    
<h1><%= title %></h1>

  <form method="POST" action="/recipes/<%= recipe._id %>/edit" class="mb-4">
    <div class="mb-3">
      <label class="form-label">Title</label>
      <input name="title" class="form-control" value="<%= recipe.title %>" required>
    </div>

    <div class="mb-3">
      <label class="form-label">Ingredients</label>
      <textarea name="ingredients" class="form-control" rows="4" required><%= recipe.ingredients %></textarea>
    </div>

    <div class="mb-3">
      <label class="form-label">Steps</label>
      <textarea name="steps" class="form-control" rows="4" required><%= recipe.steps %></textarea>
    </div>

    <div class="mb-3">
      <label class="form-label">Tags (comma-separated)</label>
      <input name="tags" class="form-control" value="<%= (recipe.tags || []).join(', ') %>">
    </div>

    <button class="btn btn-primary" type="submit">
      <i class="fas fa-save"></i> Update
    </button>
    <a href="/recipes" class="btn btn-warning">
      <i class="fas fa-undo"></i> Cancel
    </a>
  </form>

<%- include('../partials/footer.ejs') %>